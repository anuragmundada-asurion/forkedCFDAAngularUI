/*******************************
         Site Overrides
*******************************/

html.tr-coretext{
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;
}

/*--------------
   Utilities
---------------*/

.hidden{
    display: none !important;
}

.borderless{
    border: none !important;
    box-shadow: none !important;
}

/*--------------
   Background
---------------*/

.background.darkblue{
    background-color: @darkBlue;
}

.background.gray{
    background-color: #eeeeee;
}

/*--------------
   Font Size
---------------*/
.font.huge{
    font-size: @absoluteHuge;
}

/*--------------
  Header Sizes
---------------*/

.h1.size{
    font-size: @h1 !important;
    line-height: 3.5rem;
    letter-spacing: -2px;
}

/*--------------
   Font Style
---------------*/
.font.bold{
    font-weight: 700;
}
.font.light{
    font-weight: 300;
}
.font.lighter{
    font-weight: 200;
}

/*--------------
 Font Transformation
---------------*/
.font.uppercase{
    text-transform: uppercase;
}

/*--------------
      Image
---------------*/
.align.top{
    vertical-align: top;
}

/*--------------
      IAE
---------------*/

.theme-iae #iae-footer{
    margin-top: .1em !important;
}